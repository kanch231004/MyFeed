<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:elevation="4dp"
   android:layout_gravity="bottom"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="2dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/llDashboard"
            android:clickable="true"
            android:orientation="vertical"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivDashboard"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_social" />

            <TextView
                android:id="@+id/tvSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social"
                android:textSize="12sp"
                android:textAllCaps="true" />


       </LinearLayout>


       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:id="@+id/llLesson"
           android:clickable="true"
           android:orientation="vertical"
           android:focusable="true">

           <ImageView
               android:id="@+id/ivLesson"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:elevation="2dp"
               app:srcCompat="@drawable/ic_message" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Messages"
               android:textAllCaps="true"
               android:textSize="12sp"

               android:id="@+id/tvMessages"
               />


       </LinearLayout>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:id="@+id/llSchool"
           android:clickable="true"
           android:orientation="vertical"
           android:focusable="true">

           <ImageView
               android:id="@+id/ivSchool"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:elevation="2dp"
               app:srcCompat="@drawable/ic_booking_selected" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Booking"
               android:textAllCaps="true"
               android:textSize="12sp"

               android:id="@+id/tvBooking"
               />


       </LinearLayout>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:id="@+id/llSchedule"
           android:clickable="true"
           android:orientation="vertical"
           android:focusable="true">

           <ImageView
               android:id="@+id/ivSchedule"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:elevation="2dp"
               app:srcCompat="@drawable/ic_store" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Store"
               android:textAllCaps="true"
               android:textSize="12sp"

               android:id="@+id/tvStore"
               />
       </LinearLayout>


       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:id="@+id/llAnalysis"
           android:clickable="true"
           android:orientation="vertical"
           android:focusable="true">

           <ImageView
               android:id="@+id/ivAnalysis"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:elevation="2dp"
               app:srcCompat="@drawable/ic_helpdesk" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="HelpDesk"
               android:id="@+id/tvHelpDesk"
               android:textSize="12sp"
               android:textAllCaps="true"
               />


       </LinearLayout>


   </LinearLayout>
</LinearLayout>